<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="default" extends="struts-default">
	
		<action name="search" class="action.searchAction">	
			<result name="success">/searchResult.jsp</result>
		</action>
		
		<action name="bCreate" class="action.beiErstellenAction">		
			<result name="bsuccess">/bsuccess.jsp</result>
		</action>
		
		<action name="tCreate" class="action.trefErstellenAction">		
			<result name="tsuccess">/tsuccess.jsp</result>
		</action>
		
		<action name = "login" class = "action.login">
			<result name ="success">/successLogin.jsp</result>
			<result name ="error">/login.jsp</result>
		</action>
		
	</package>
	
</struts>