<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">
	
<struts>
	<package name = "default" extends = "struts-default">
		<action name = "login" class = "action.login">
			<result name ="success">/index.jsp</result>
			<result name ="error">/login.jsp</result>
			<result name ="input">/login.jsp</result>
		</action>
		<action name="logout" class="action.logout">
			<result name="success">/index.jsp</result>
		</action>
		<action name="meetingListing" class="action.meetingListing">
			<result name="success">/treffenListing.jsp</result>
			<result name="input">/treffenListing.jsp</result>
		</action>
		<action name="joinMeeting" class="action.JoinMeeting">
			<result name="success">/successJoin.jsp</result>
			<result name="error">/successJoin.jsp</result>
			<result name="input">/index.jsp</result>
		</action>
		<action name="articleListing" class="action.ArticleListing">
			<result name="success">/articleListing.jsp</result>
			<result name="input">/articleListing.jsp</result>
		</action>
		<action name="showArticle" class="action.ArticleView">
			<interceptor-ref name="chain"/>
    		<interceptor-ref name="basicStack"/>
			<result name="success">/beitragView.jsp</result>
			<result name="input">/beitragView.jsp</result>
		</action>
		<action name="postComment" class="action.PostComment">
			<interceptor-ref name="basicStack"/>
	    	<result name="success" type="chain">showArticle</result>
			<result name="input" type="chain">showArticle</result>
		</action>
		<action name="search" class="action.search">	
			<result name="user">/searchResult.jsp</result>
			<result name="article">/searchResultArticle.jsp</result>
			<result name="fail">/successSearch.jsp</result>
		</action>
		
		<action name="bCreate" class="action.bCreate">		
			<result name="success">/index.jsp</result>
		</action>
		
		<action name="bEdit" class="action.bEdit">
			<result name="success">/beitragView.jsp</result>
		</action>
		
		<action name="tCreate" class="action.tCreate">		
			<result name="success">/index.jsp</result>
		</action>

	</package>
</struts>